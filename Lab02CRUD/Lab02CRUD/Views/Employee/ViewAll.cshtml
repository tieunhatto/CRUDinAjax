@model IEnumerable<Lab02CRUD.Models.Employee>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<table class="table table-striped table-condensed" id="employeeTable">
    <thead>
        <tr>
            <th>
                Họ và tên
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Văn phòng
            </th>
            <th>
                Tiền lương
            </th>
            <th>
                Image
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Office)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <img src="@item.ImagePath" style="height:50px;" />
            </td>
            <td>
                <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit","Employee",new { id=item.EmployeeId})')"><i class="fa fa-pencil fa-lg"></i> Sửa</a>
                <a class="btn btn-info btn-sm" onclick="Details('@Url.Action("Details","Employee",new { id=item.EmployeeId})')"><i class="fa fa-info fa-lg"></i> Chi tiết</a>
                <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","Employee",new { id=item.EmployeeId})')"><i class="fa fa-trash fa-lg"></i> Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
